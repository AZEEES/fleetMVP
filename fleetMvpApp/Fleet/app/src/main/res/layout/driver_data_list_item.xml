<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/driver_data_item_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="6dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/driver_data_item_name"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@android:color/white"/>
                <TextView
                    android:id="@+id/driver_data_item_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:textColor="@android:color/white"/>
            </LinearLayout>

            <TextView
                android:visibility="gone"
                android:id="@+id/driver_data_item_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:textColor="@android:color/white"/>
            <TextView
                android:visibility="gone"
                android:id="@+id/driver_data_item_timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="6dp"
                android:textColor="@android:color/white"/>
            <Button
                android:visibility="gone"
                android:id="@+id/driver_data_approve_btn"
                android:layout_gravity="center"
                android:paddingRight="48dp"
                android:paddingLeft="48dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:text="Approve"/>
            <Button
                android:visibility="gone"
                android:id="@+id/driver_data_revoke_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingRight="48dp"
                android:paddingLeft="48dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="12dp"
                android:textAllCaps="true"
                android:text="Revoke"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>